{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,

		"jsxImportSource": "solid-js", // specify source for JSX type definitions
		"jsx": "preserve", // tell TS to leave JSX syntax alone, we use Babel to compile it babel-preset-solid instead.

		"outDir": ".tmp",
		"target": "ES2023",
		"module": "ESNext",
		"moduleResolution": "Node",

		"skipLibCheck": true,
		"skipDefaultLibCheck": true
	},
	"include": ["./src/**/*"]
}
