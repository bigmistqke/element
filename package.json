		"solid-js": "^0.23.0"
	},
	"devDependencies": {
		"@lume/cli": "^0.3.0",
		"ncp": "^2.0.0",
		"prettier": "^2.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/lume/element.git"
